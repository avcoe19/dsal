Practical 1

#include <iostream>
#include <string>
using namespace std;

struct Student { 
    int rollNo;
    string name;
    float marks;
};

void display(Student s[], int n) {
    cout << "\nRoll No\tName\tMarks\n";
    cout << "---------------------------\n";
    for (int i = 0; i < n; i++)
        cout << s[i].rollNo << "\t" << s[i].name << "\t" << s[i].marks << endl;
}

// Bubble Sort based on Roll No
void bubbleSort(Student s[], int n) {
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (s[j].rollNo > s[j + 1].rollNo) {
                swap(s[j], s[j + 1]);
            }
        }
    }
}

// Selection Sort based on Marks
void selectionSort(Student s[], int n) {
    for (int i = 0; i < n - 1; i++) {
        int minIndex = i;
        for (int j = i + 1; j < n; j++) {
            if (s[j].marks < s[minIndex].marks)
                minIndex = j;
        }
        swap(s[i], s[minIndex]);
    }
}

int main() {
    int n = 10;
    Student s[10] = {
        {101, "Amit", 78}, {102, "Riya", 88}, {103, "Vikram", 67},
        {104, "Neha", 90}, {105, "Raj", 55}, {106, "Simran", 92},
        {107, "Arjun", 81}, {108, "Pooja", 76}, {109, "Karan", 85}, {110, "Meena", 80}
    };

    int choice;
    cout << "1. Bubble Sort (by Roll No)\n2. Selection Sort (by Marks)\nEnter choice: ";
    cin >> choice;

    cout << "\nBefore Sorting:";
    display(s, n);

    if (choice == 1)
        bubbleSort(s, n);
    else
        selectionSort(s, n);

    cout << "\nAfter Sorting:";
    display(s, n);

    return 0;
}
