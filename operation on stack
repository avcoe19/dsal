Practical 2

#include <iostream>
#include <string>
using namespace std;

struct Student {
    int rollNo;
    string name;
    float marks;
};

void display(Student s[], int n) {
    cout << "\nRoll No\tName\tMarks\n";
    cout << "---------------------------\n";
    for (int i = 0; i < n; i++)
        cout << s[i].rollNo << "\t" << s[i].name << "\t" << s[i].marks << endl;
}

// Linear Search by Roll No
void linearSearch(Student s[], int n, int key) {
    bool found = false;
    for (int i = 0; i < n; i++) {
        if (s[i].rollNo == key) {
            cout << "\nStudent Found:\nRoll No: " << s[i].rollNo 
                 << "\nName: " << s[i].name 
                 << "\nMarks: " << s[i].marks << endl;
            found = true;
            break;
        }
    }
    if (!found)
        cout << "\nStudent not found!\n";
}

// Binary Search by Roll No (array must be sorted)
int binarySearch(Student s[], int n, int key) {
    int low = 0, high = n - 1;
    while (low <= high) {
        int mid = (low + high) / 2;
        if (s[mid].rollNo == key)
            return mid;
        else if (s[mid].rollNo < key)
            low = mid + 1;
        else
            high = mid - 1;
    }
    return -1;
}

int main() {
    int n = 10;
    Student s[10] = {
        {101, "Amit", 78}, {102, "Riya", 88}, {103, "Vikram", 67},
        {104, "Neha", 90}, {105, "Raj", 55}, {106, "Simran", 92},
        {107, "Arjun", 81}, {108, "Pooja", 76}, {109, "Karan", 85}, {110, "Meena", 80}
    };

    cout << "Student Database:";
    display(s, n);

    int choice;
    cout << "\n1. Linear Search\n2. Binary Search\nEnter choice: ";
    cin >> choice;

    int key;
    cout << "Enter Roll No to search: ";
    cin >> key;

    if (choice == 1) {
        linearSearch(s, n, key);
    } else {
        int pos = binarySearch(s, n, key);
        if (pos != -1)
            cout << "\nStudent Found:\nRoll No: " << s[pos].rollNo 
                 << "\nName: " << s[pos].name 
                 << "\nMarks: " << s[pos].marks << endl;
        else
            cout << "\nStudent not found!\n";
    }

    return 0;
}
